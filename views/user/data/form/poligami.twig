{% extends 'user/templates/default.twig' %}
{% block content %}
    

<div class="card blue-grey darken-12">
            <div class="card-content white-text">
              <span class="card-title">Create Data Poligami</span>
        <div class="row">
            <form class="col s12" action="{{ path_for('user.post.create.poligami') }}" method="POST">
            <div class="row">
                <div class="input-field col s12 {{ errors.kesiapan ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="kesiapan"  value="{{old.kesiapan}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Kesiapan</label>
                  {% if errors.kesiapan %}
                    <span style="color:#FF0000">*
                    {{errors.kesiapan | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.penjelasan_kesiapan ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="penjelasan_kesiapan" value="{{old.penjelasan_kesiapan}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Penjelasan Kesiapan</label>
                   {% if errors.penjelasan_kesiapan %}
                    <span style="color:#FF0000">*
                    {{errors.penjelasan_kesiapan | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.alasan_poligami ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="alasan_poligami" value="{{old.alasan_poligami}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Alasan Poligami</label>
                   {% if errors.alasan_poligami %}
                    <span style="color:#FF0000">*
                    {{errors.alasan_poligami | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.kondisi_istri ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="kondisi_istri" value="{{old.kondisi_istri}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Kondisi Istri</label>
                   {% if errors.kondisi_istri %}
                    <span style="color:#FF0000">*
                    {{errors.kondisi_istri | first}}</span>
                  {% endif %}
                </div>

                </div>
              <button class="btn waves-effect waves-light">Create</button>
            </form>
          </div>

</div>
{% endblock %}
