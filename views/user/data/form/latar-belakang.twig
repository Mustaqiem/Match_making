                  <input type="text" class="validate" name="hafalan" value="{{old.hafalan}}">
                  <label style="color:#ecf0f1" for="icon_prefix">hafalan</label>
                   {% if errors.hafalan %}
                    <span style="color:#FF0000">*
                    {{errors.hafalan | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.keluarga ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="keluarga" value="{{old.keluarga}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Keluarga</label>
                   {% if errors.keluarga %}
                    <span style="color:#FF0000">*
                    {{errors.keluarga | first}}</span>
                  {% endif %}
                </div>

                 <div class="input-field col s12 {{ errors.penjelasan_keluarga ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="penjelasan_keluarga" value="{{old.penjelasan_keluarga}}">
