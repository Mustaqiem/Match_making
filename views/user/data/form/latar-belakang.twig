{% extends 'user/templates/default.twig' %}
{% block content %}
    

<div class="card blue-grey darken-12">
            <div class="card-content white-text">
              <span class="card-title">Create Latar Belakang</span>
        <div class="row">
            <form class="col s12" action="{{ path_for('user.post.create.latar-belakang') }}" method="POST">
            <div class="row">
                <div class="input-field col s12 {{ errors.pendidikan ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="pendidikan"  value="{{old.pendidikan}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Pendidikan</label>
                  {% if errors.pendidikan %}
                    <span style="color:#FF0000">*
                    {{errors.pendidikan | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.penjelasan_pendidikan ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="penjelasan_pendidikan" value="{{old.penjelasan_pendidikan}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Penjelasan Pendidikan</label>
                   {% if errors.penjelasan_pendidikan %}
                    <span style="color:#FF0000">*
                    {{errors.penjelasan_pendidikan | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.agama ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="agama" value="{{old.agama}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Agama</label>
                   {% if errors.agama %}
                    <span style="color:#FF0000">*
                    {{errors.agama | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.penjelasan_agama ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="penjelasan_agama" value="{{old.penjelasan_agama}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Penjelasan Agama</label>
                   {% if errors.penjelasan_agama %}
                    <span style="color:#FF0000">*
                    {{errors.penjelasan_agama | first}}</span>
                  {% endif %}
                </div>

                <div class="input-field col s12 {{ errors.muallaf ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="muallaf" value="{{old.muallaf}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Muallaf</label>
                   {% if errors.muallaf %}
                    <span style="color:#FF0000">*
                    {{errors.muallaf | first}}</span>
                  {% endif %}
                </div>

