                   {% if errors.penjelasan_keluarga %}
                    <span style="color:#FF0000">*
                    {{errors.penjelasan_keluarga | first}}</span>
                  {% endif %}

                <div class="input-field col s12 {{ errors.shalat ? 'has-error' : '' }}">
                  <input type="text" class="validate" name="shalat" value="{{old.shalat}}">
                  <label style="color:#ecf0f1" for="icon_prefix">Shalat</label>
                   {% if errors.shalat %}
                    <span style="color:#FF0000">*
                    {{errors.shalat | first}}</span>
                  {% endif %}
                </div>               
                </div>
              <button class="btn waves-effect waves-light">Create</button>
            </form>
          </div>

</div>
{% endblock %}
