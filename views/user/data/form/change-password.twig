{% extends 'user/templates/default.twig' %}
{% block title %}
    change password
{% endblock %}

{% block content %}
     <div class="row">
        <div class="col s12 m12">
          <div class="card">
            <div class="card-content white-text">
              <span class="card-title" style="font-family:initial;font-style:oblique;font-size:25px;color:black">Change Password</span>
    <p style="color:black"></p>
    <div class="row">
    <form class="col s12" action="{{ path_for('user.post.change-password') }}" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate" name="password" style="color:black">
              {% if errors.password %}
                <span style="color:#FF0000">*
                {{errors.password | first}}</span>
              {% endif %}
          <label for="password">Password</label>
          label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <input type="password" class="validate" name="new_password" style="color:black">
              {% if errors.new_password %}
                <span style="color:#FF0000">*
                {{errors.new_password | first}}</span>
              {% endif %}
          <label >Password Baru</label>
          label>
        </div>

        <div class="input-field col s6">
          <input type="password" name="confirm_password" class="validate" style="color:black">
              {% if errors.confirm_password %}
                <span style="color:#FF0000">*
                {{errors.confirm_password | first}}</span>
              {% endif %}
          <label >Retype Password</label>
          label>
        </div>
      </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Send email

    </form>
  </div>
   
            </div>
           </div>
        </div>
      </div
{% endblock %}