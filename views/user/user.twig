<a href="#modal3" class="modal-trigger"><span><i class="material-icons right">more_vert</i></span></a>
    <div class="row" style="width:100%;margin-top:25px">
    {% if login.gender == 'laki-laki' %}
    {% for profil in data %} 
    <div class="col s6 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{ base_url() }}/assets/images/avatar.png">
          <a class="btn-floating halfway-fab waves-effect waves-light blue"><i class="fa fa-paper-plane -o" style="color:white"></i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{ profil.nama_lengkap }}</span>
        <div class="card-action">
          </div>
          <p><b>Jenis Kelamin :</b> laki-laki.</p>
          <p><b>Umur :</b> {{profil.umur}} Tahun.</p>
          <p><b>Domisili :</b></p>
          <p><b>- Negara :</b> {{profil.kewarganegaraan}}.</p>
          <p><b>- Provinsi : </b> {{profil.provinsi}}.</p>
          <p><b>- Kota : </b> {{profil.kota}}.</p>
          {% if profil.status_request == 2 %}
          <p><b>Status : </b><!-- <b class="chip blue" style="color:white">Sedang Taaruf</b> -->  <span class="new badge" data-badge-caption="Sedang Taaruf."></span>.</p>
          {% elseif profil.status_request == 1 %}
          <p><b>Status : </b><b class="badge" style="color:white">Available</b>.</p>
          {% endif %}
        </div>
         <div class="card-action">
              <center><a href="#"><button class="btn waves-effect waves-light blue">View Detail</button></a></center>
            </div>
      </div>
    </div>
    {% else %}
         <div class="col s6 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{ base_url() }}/assets/images/avatar.png">
          <a class="btn-floating halfway-fab waves-effect waves-light blue"><i class="fa fa-paper-plane -o" style="color:white"></i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{ profil.nama_lengkap }}</span>
        <div class="card-action">
          </div>
          <p><b>Jenis Kelamin :</b> Perempuan.</p>
          <p><b>Umur :</b> {{profil.umur}} Tahun.</p>
          <p><b>Domisili :</b></p>
          <p><b>- Negara :</b> {{profil.kewarganegaraan}}.</p>
          <p><b>- Provinsi : </b> {{profil.provinsi}}.</p>
          <p><b>- Kota : </b> {{profil.kota}}.</p>
          {% if profil.status_request == 2 %}
          <p><b>Status : </b><b class="chip blue" style="color:white">Sedang Taaruf</b>.</p>
          {% else %}
          <p><b>Status : </b><b class="chip blue" style="color:white">Available</b>.</p>
          {% endif %}
        </div>
         <div class="card-action">
              <center><a href="#"><button class="btn waves-effect waves-light blue">View Detail</button></a></center>
            </div>
      </div>
    </div>
    {% endfor %}
    {% endif %}        

