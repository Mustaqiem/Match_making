{% if login.gender == 'perempuan' %}
    <div class="row" style="width:100%;margin-top:25px">
    {% for profil in data %} 
    <div class="col s6 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{ base_url() }}/assets/images/avatar.png">
          <a href="" class="btn-floating halfway-fab waves-effect waves-light blue tooltipped pulse" data-position="bottom" data-delay="50" data-tooltip="Send Request"><i class="fa fa-paper-plane -o" style="color:white"></i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{ profil.nama_lengkap }}</span>
        <div class="card-action">
          </div>
          <p><b>Jenis Kelamin :</b> {{profil.jenis_kelamin}}.</p>
          <p><b>Umur :</b> {{profil.umur}} Tahun.</p>
          <p><b>Domisili :</b></p>
          <p><b>- Negara :</b> {{profil.kewarganegaraan}}.</p>
          <p><b>- Provinsi : </b> {{profil.provinsi}}.</p>
          <p><b>- Kota : </b> {{profil.kota}}.</p>
          <!-- <p><b>Status : </b> <span class="new badge" data-badge-caption="Sedang Taaruf."></span>.</p> -->
          <p><b>Status : </b><a class="btn btn-floating pulse" style="width:10px;height:10px"></a><b style=" font-family:initial;font-style:oblique;font-size:12px"> Sedang Taaruf</b>.</p>
        </div>
         <div class="card-action">
              <center><a href="{{ path_for('user.view.detail.user',  {id:profil.user_id}) }}"><button class="btn waves-effect waves-light blue">View Detail</button></a></center>
            </div>
      </div>
    </div>
    {% endfor %}
{% else %}
  <div class="row" style="width:100%;margin-top:25px">
    {% for profil1 in user %} 
    <div class="col s6 m6">
      <div class="card">
        <div class="card-image">
          <img src="{{ base_url() }}/assets/images/avatar.png">
          <a href="{{ path_for('user.view.detail.user',  {id:profil1.id}) }}" class="btn-floating halfway-fab waves-effect waves-light blue tooltipped pulse" data-position="bottom" data-delay="50" data-tooltip="Send Request"><i class="fa fa-paper-plane -o" style="color:white"></i></a>
        </div>
        <div class="card-content">
          <span class="card-title">{{ profil1.nama_lengkap }}</span>
        <div class="card-action">
          </div>
          <p><b>Jenis Kelamin :</b> {{profil1.jenis_kelamin}}.</p>
          <p><b>Umur :</b> {{profil1.umur}} Tahun.</p>
          <p><b>Domisili :</b></p>
          <p><b>- Negara :</b> {{profil1.kewarganegaraan}}.</p>
          <p><b>- Provinsi : </b> {{profil1.provinsi}}.</p>
          <p><b>- Kota : </b> {{profil1.kota}}.</p>
          {% if profil1.status_request == 2 %}
          <p><b>Status : </b> <span class="new badge" data-badge-caption="Sedang Taaruf."></span>.</p>
          {% elseif profil1.status_request == 1 %}
          <p><b>Status : </b><b class="badge" style="color:white">Available</b>.</p>
          {% endif %}
        </div>
         <div class="card-action">
              <center><a href="{{ path_for('user.view.detail.user', {id:profil1.user_id}) }}"><button class="btn waves-effect waves-light blue">View Detail</button></a></center>
            </div>
      </div>
    </div>
    {% endfor %}
{% endif %}
