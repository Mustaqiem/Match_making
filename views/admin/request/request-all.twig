{% extends 'templates/default.twig' %}
{% block title %}Match Making{% endblock %}
{% block wrapper %} All Member Proses {% endblock %}
{% block breadcrumb %} Member {% endblock %}
{% block breadcrumb_active %} All Member Proses {% endblock %}
{% block content %}
  <div class="app-content content container-fluid">
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><!-- stats -->
  <div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Semua data member proses</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <!-- <div class="card-block card-dashboard">
                    <p class="card-text">Data data semua user</p>
                </div> -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Perequest</th>
                                <th>Terequest</th>
                                <th>Status</th>
                                <th>Mulai Request</th>
                                <!-- <th>Option</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            {% for request in data %}
                            <tr>
                                <th scope="row">{{loop.index}}</th>
                                <td>{{request.perequest}}</td>
                                <td>{{request.terequest}}</td>
                                <td>
                                 {% if (request.request_status == 1) and (request.blokir == 0) %}
                                   <span class="tag tag-primary" style="border-radius:10%">Belum di request</span>
                                {% elseif (request.request_status == 2) and (request.blokir == 0) %}
                                   <span class="tag tag-success" style="border-radius:10%">Sudah di request/sedang proses</span>
                                {% elseif (request.request_status == 1) and (request.blokir == 1)  %}
                                   <span class="tag tag-danger" style="border-radius:10%">Sudah di tolak</span>
                                {% elseif (request.request_status == 2) and (request.blokir == 2) %}
                                   <span class="tag tag-warning" style="border-radius:10%">Sudah di cancel admin</span>
                                {% endif %}
                                <td>{{request.created_at | date("j F Y")}}</td>
                                </td>
                                <!-- <td>
                                    <a href="" style="color:red" data-toggle="tooltip" data-placement="top" title="Delete User"><i class="icon-close2"></i></a>
                                    <a href="{{ path_for('admin.detail.user', {'id':user.id}) }}" style="color: #1a53ff"  data-placement="top" title="View Detail" data-toggle="tooltip"><i class="icon-eye4"></i></a>
                                     <a href="{{ path_for('admin.setModerator.user', {'id':user.id}) }}" data-toggle="tooltip" data-placement="top" title="Set moderator"><i class="icon-check"></i></a>
                                </td> -->
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                          <div class="text-xs-right mb-3">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                            {% if pagination.current > pagination.first_page %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/get-request-all?page={{ pagination.first_page }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo; First Page</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/get-request-all?page={{ pagination.current - 1 }}" aria-label="Previous">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span> {{ pagination.current - 1 }}
                                        </a>
                                    </li>
                            {% endif %}
                                    <li class="page-item"><a class="page-link" href="">{{ pagination.current }}</a></li>
                            {% if pagination.current < pagination.total_page %}
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/get-request-all?page={{ pagination.current + 1 }}" aria-label="Next">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Next</span> {{ pagination.current + 1 }}
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/get-request-all?page={{ pagination.total_page }}" aria-label="Next">
                                            <span aria-hidden="true">Last Page &raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}