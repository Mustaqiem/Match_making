{% extends 'templates/default.twig' %}
{% block title %}Match Making{% endblock %}
{% block wrapper %} List Negara {% endblock %}
{% block breadcrumb %} CRUD {% endblock %}
{% block breadcrumb_active %} Negara {% endblock %}
{% block content %}
  <div class="app-content content container-fluid">
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><!-- stats -->
  <div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Semua data negara</h4>
                <div class="card-body collapse in">
                    <button type="button" class="btn btn-outline-primary"data-toggle="modal" data-target="#default">Create Negara</button>
                    <div class="card-block">
                    <!-- Modal -->
                    <div class="modal fade text-xs-left" id="default" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel1"> Create Negara</h4>
                          </div>
                          <div class="modal-body">
                            <form action="{{ path_for('admin.tambah.negara') }}" method="POST">

                                <div class="form-group">
                                    <label for="complaintinput6">Nama Negara</label>
                                    <input type="text" id="complaintinput6" class="form-control round" placeholder="Nama Negara" name="nama">
                                </div>
                          <div class="modal-footer">
                            <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-outline-primary">Save changes</button>
                          </div>
                            </form>
                          </div>
                        </div>
                      </div>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <!-- <div class="card-block card-dashboard">
                    <p class="card-text">Data data semua user</p>
                </div> -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Negara</th>
                                <th class="">Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for provinsi in data %}
                            <tr>
                                <th scope="row">{{loop.index}}</th>
                                <td>{{provinsi.nama}}</td>
                                <td>
                                    <a href="" data-toggle="tooltip" data-placement="top" title="Delete"><i class="icon-times"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                         <div class="text-xs-right mb-3">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                            {% if pagination.current > pagination.first_page %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/negara?page={{ pagination.first_page }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo; First Page</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/negara?page={{ pagination.current - 1 }}" aria-label="Previous">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span> {{ pagination.current - 1 }}
                                        </a>
                                    </li>
                            {% endif %}
                                    <li class="page-item"><a class="page-link" href="">{{ pagination.current }}</a></li>
                            {% if pagination.current < pagination.total_page %}
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/negara?page={{ pagination.current + 1 }}" aria-label="Next">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Next</span> {{ pagination.current + 1 }}
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/negara?page={{ pagination.total_page }}" aria-label="Next">
                                            <span aria-hidden="true">Last Page &raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
           
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}