                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Negara</th>
                                <th>Provinsi</th>
                                <th>Option  </th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for provinsi in data %}
                            <tr>
                                <th scope="row">{{loop.index}}</th>
                                <td>{{provinsi.negara}}</td>
                                <td>{{provinsi.nama}}</td>
                                <td>
                                    <a href="" data-toggle="tooltip" data-placement="top" title="Delete"><i class="icon-times"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <!-- Modal -->
                    <div class="modal fade text-xs-left" id="default" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel1"> Create Negara</h4>
                          </div>
                          <div class="modal-body">
                            <form action="{{ path_for('admin.tambah.provinsi') }}" method="POST">
                                <div class="form-group">
                                <label for="complaintinput6">Nama Negara</label>
                                    <select name="id_negara" id="complaintinput6" class="form-control round" >
                                        <option value="">Select Negara</option>
                                        {% for negara in negara %}
                                        <option value="{{negara.id}}">{{negara.nama}}</option>
                                        {% endfor %}
                                    </select>
                                    <label for="complaintinput6">Nama Provins</label>
                                    <input type="text" id="complaintinput6" class="form-control round" placeholder="Nama Provinsi" name="nama">
                                </div>
                          <div class="modal-footer">
                            <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-outline-primary">Save changes</button>
                          </div>
                            </form>
                          </div>
                        </div>
