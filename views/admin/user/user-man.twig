{% extends 'templates/default.twig' %}
{% block title %}Match Making{% endblock %}
{% block wrapper %} All User man {% endblock %}
{% block breadcrumb %} User {% endblock %}
{% block breadcrumb_active %} List member ikhwan {% endblock %}
{% block content %}
  <div class="app-content content container-fluid">
      <div class="content-wrapper">
        <div class="content-header row">
        </div>
        <div class="content-body"><!-- stats -->
  <div class="row">
    <div class="col-xs-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Semua data member pria</h4>
                <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="reload"><i class="icon-reload"></i></a></li>
                        <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body collapse in">
                <!-- <div class="card-block card-dashboard">
                    <p class="card-text">Data data semua user</p>
                </div> -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Jenis Kelamin</th>
                                <th>No.Telepon</th>
                                <th>Status</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in data %}
                            <tr>
                                <th scope="row">{{loop.index}}</th>
                                <td>{{user.username}}</td>
                                <td>{{user.email}}</td>
                                <td>{{user.gender}}</td>
                                <td>{{user.phone}}</td>
                                <td>
                                 {% if user.role == 0 %}
                                   <span class="tag tag-info" style="border-radius:10%">User</span>
                                {% elseif user.role == 1 %}
                                   <span class="tag tag-primary" style="border-radius:10%">Admin</span>
                                {% elseif user.role == 2 %}
                                   <span class="tag tag-success" style="border-radius:10%">Moderator</span>
                                {% endif %}
                                </td>
                                <td>
                                   <a href="{{ path_for('admin.detail.user', {'id':user.id}) }}" style="color: #1a53ff"  data-placement="top" title="View Detail" data-toggle="tooltip"><i class="icon-eye4"></i></a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                          <div class="text-xs-right mb-3">
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                            {% if pagination.current > pagination.first_page %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/user/pria?page={{ pagination.first_page }}" aria-label="Previous">
                                            <span aria-hidden="true">&laquo; First Page</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/user/pria?page={{ pagination.current - 1 }}" aria-label="Previous">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span> {{ pagination.current - 1 }}
                                        </a>
                                    </li>
                            {% endif %}
                                    <li class="page-item"><a class="page-link" href="">{{ pagination.current }}</a></li>
                            {% if pagination.current < pagination.total_page %}
                                     <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/user/pria?page={{ pagination.current + 1 }}" aria-label="Next">
                                            <span aria-hidden="true"></span>
                                            <span class="sr-only">Next</span> {{ pagination.current + 1 }}
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="{{ base_url() }}/admin/user/pria?page={{ pagination.total_page }}" aria-label="Next">
                                            <span aria-hidden="true">Last Page &raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
           
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}