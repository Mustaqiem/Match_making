            <th>No</th>
            <th>Nama Lengkap</th>
            <th>Tanggal Lahir</th>
            <th>Tempat Lahir</th>
            <th>Alamat</th>
            <th>Umur</th>
            <th>Kota</th>
            <th>Provinsi</th>
            <th>Kewarganegaraa</th>
            <th>Target Menikah</th>
            <th>Tentang Saya</th>
            <th>Pasangan Yang Di Harapakan</th>
        </tr>
    </thead>
        <tbody>
            {% for profil in data %}
