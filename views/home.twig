                    <td> {{ loop.index }} </td>
                    <td> {{ profil.nama_lengkap }} </td>
                    <td> {{ profil.tanggal_lahir }} </td>
                    <td> {{ profil.tempat_lahir }} </td>
                    <td> {{ profil.alamat }} </td>
                    <td> {{ profil.umur }} </td>
                    <td> {{ profil.kota }} </td>
                    <td> {{ profil.provinsi }} </td>
                    <td> {{ profil.kewarganegaraan }} </td>
                    <td> {{ profil.target_menikah }} </td>
                    <td> {{ profil.tentang_saya }} </td>
                    <td> {{ profil.pasangan_harapan }} </td>
                </tr>
            {% endfor %}
