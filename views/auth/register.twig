<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register - Match Making</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/png" href="{{ base_url() }}/assets/images/logo.png">
    <link rel="stylesheet" href="{{ base_url() }}/assets/assets/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="{{ base_url() }}/assets/assets/css/user.css">
    <link rel="stylesheet" href="{{ base_url() }}/assets/assets/css/scrollbar.css">
 
</head>

<body> 


<div class="container scrollbar" class="box-shadow-2" id="style-10" style="background:url({{ base_url() }}/assets/images/bglogin.png);background-size:100%">

        <div class="midle">
        {% include 'templates/partials/flash.twig' %}
        <center><h5 style="color:white">Welcome</h5></center>
        <center><img src="{{base_url()}}/assets/images/logomm.png" style="width:20%" alt=""></center>
        <center><b style="color:whitesmoke">Register</b></center>
            <div class="row">
                <form class="col s12" action="{{ path_for('user.post.register') }}" method="POST">
                <div class="row">
                    <div class="input-field col s12 {{ errors.username ? 'has-error' : '' }}">
                      <i class="material-icons prefix">account_circle</i>
                      <input id="icon_prefix input_text" type="text" style="border-bottom:1px solid #ecf0f1" class="validate" name="username" data-length="20">
                      <label for="icon_prefix" style="color:#ecf0f1">Username</label>
                      {% if errors.username %}
                        <span style="color:#FF0000">*
                        {{errors.username | first}}</span>
                      {% endif %}
                    </div>

                    <div class="input-field col s12 {{ errors.email ? 'has-error' : '' }}">
                      <i class="material-icons prefix">email</i>
                      <input id="icon_email" type="text" style="border-bottom:1px solid #ecf0f1" class="validate" name="email">
                      <label for="icon_prefix" style="color:#ecf0f1">Email</label>
                       {% if errors.email %}
                        <span style="color:#FF0000">*
                        {{errors.email | first}}</span>
                      {% endif %}
                    </div>

                    <div class="input-field col s12  {{ errors.password ? 'has-error' : '' }}">
                      <i class="material-icons prefix">lock</i>
                      <input id="icon_password input_text" type="password" style="border-bottom:1px solid #ecf0f1" name="password" class="validate" data-length="20">
                      <label for="icon_password" style="color:#ecf0f1">Password</label>
                      {% if errors.password %}
                        <span style="color:#FF0000">*
                        {{errors.password | first}}</span>
                      {% endif %}
                    </div>
        
                     <div class="input-field col s12  {{ errors.gender ? 'has-error' : '' }}">
                      <i class="material-icons prefix">people_outline</i>
                     <select name="gender" id="" style="border-bottom:1px solid #ecf0f1">
                         <option value="">Select jenis kelamin</option>
                         <option value="laki-laki">laki-laki</option>
                         <option value="perempuan">perempuan</option>
                     </select>
                     {% if errors.gender %}
                        <span style="color:#FF0000">*
                        {{errors.gender | first}}</span>
                      {% endif %}
                    </div>

                    <div class="input-field col s12 {{ errors.phone ? 'has-error' : '' }}">
                      <i class="material-icons prefix">phone</i>
                      <input id="icon_phone" type="tel" style="border-bottom:1px solid #ecf0f1" class="validate" name="phone">
                      <label for="icon_prefix" style="color:#ecf0f1">Nomor Telepon</label>
                       {% if errors.phone %}
                        <span style="color:#FF0000">*
                        {{errors.phone | first}}</span>
                      {% endif %}
                    </div>
                </div>

                    <div class = "file-field input-field">
                        <div class = "btn waves-effect waves-light blue">
                            <span>Foto</span>
                            <input type = "file" name="photo" />
                            </div>
                            <div class = "file-path-wrapper">
                            <input class= "file-path validate" style="border-bottom:1px solid #ecf0f1" type= "text"
                                placeholder = "Upload Foto" />
                            </div>
                        </div>


                     <div class = "file-field input-field">
                        <div class = "btn waves-effect waves-light blue">
                            <span>KTP</span>
                            <input type = "file" name="ktp" />
                            </div>
                            <div class = "file-path-wrapper">
                            <input class= "file-path validate" style="border-bottom:1px solid #ecf0f1" type= "text"
                                placeholder = "Upload KTP" />
                            </div>
                        </div>

