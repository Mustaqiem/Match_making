{% extends 'user/templates/default.twig' %}
{% block title %}
    Change Image
{% endblock %}
{% block content %}
      <div class="card blue-grey darken-12">
            <div class="card-content white-text">
              <span class="card-title">Change Image</span>
        <div class="row">
            <form class="col s12" action="{{ path_for('user.post.change.image', {id:login.id}) }}" method="POST" enctype="multipart/form-data">
            <div class="row">

                <div class = "file-field input-field">
                    <div class = "btn waves-effect waves-light blue">
                        <span>Foto</span>
                        <input type = "file" name="image" />
                        </div>
                        <div class = "file-path-wrapper">
                        <input class= "file-path validate" style="border-bottom:1px solid #ecf0f1" type= "text"
                            placeholder = "Upload Foto" />
                        </div>
                    </div>


                 <div class = "file-field input-field">
                    <div class = "btn waves-effect waves-light blue">
                        <span>KTP</span>
                        <input type = "file" name="ktp" />
                        </div>
                        <div class = "file-path-wrapper">
                        <input class= "file-path validate" style="border-bottom:1px solid #ecf0f1" type= "text"
                            placeholder = "Upload KTP" />
                        </div>
                    </div>



              </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Change Image
                </button>
            </form>
          </div><br><br>
    
 </div><br>
</div>

{% endblock %}

