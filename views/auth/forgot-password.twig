<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password - Match Making</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/png" href="{{ base_url() }}/assets/picture/logo.png">
    <link rel="stylesheet" href="{{ base_url() }}/assets/assets/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

 
    <link rel="stylesheet" href="{{ base_url() }}/assets/assets/css/user.css">
</head>

<body> 

<center><div class="loader" style="height:700px;width:100%;background:rgba(252, 250, 250, 0.48);position:fixed;z-index:9999999999999;margin-top:-20px;padding:20%">
  <div class="preloader-wrapper big active">
    <div class="spinner-layer spinner-green-only">
      <div class="circle">
        <div class="circle"></div>
      </div>
      <div class="gap-patch">
        <div class="circle"></div>
      </div><div class="circle-clipper right">
        <div class="circle"></div>
      </div>
    </div>
</div>
</center>

<div class="container" class="box-shadow-2" id="style-10" style="background:url({{ base_url() }}/assets/picture/bglogin.png);background-size:100%">

        <div class="midle">
        {% include 'templates/partials/flash.twig' %}
        <center><h5 style="color:white">Welcome</h5></center>
        <center><img src="{{base_url()}}/assets/picture/logomm.png" style="width:20%" alt=""></center>
        <center><b style="color:whitesmoke">Forgot Password</b></center>
            <div class="row">
                <form class="col s12" action="{{ path_for('post.forgot.password') }}" method="POST">
                  <div class="row">
                    <div class="input-field col s12">
                      <i class="material-icons prefix">email</i>
                      <input id="icon_prefix" type="email" style="border-bottom:1px solid #ecf0f1" class="validate" name="email">
                      <label for="icon_prefix" style="color:#ecf0f1">Email</label>
                    </div>
                  </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action">Send email
                    </button>
                </form>
              </div>
        
     </div><br>
     <p style="color:#ecf0f1"  class="pull-left text-xs-center m-0">Already have an account? <a href="{{ path_for('user.login') }}" class="card-link" style="color:#1F3A93" >Login</a></p>
    <p style="color:#ecf0f1" class="pull-right text-xs-center m-0">New Account? <a href="{{ path_for('user.register') }}" class="card-link" style="color:#1F3A93">Register</a></p><br>

</div>


    <script src="{{ base_url() }}/assets/assets/js/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="{{ base_url() }}/assets/assets/js/tooltip.js" type="text/javascript"></script>
    <script src="{{ base_url() }}/assets/assets/js/materialize.min.js" type="text/javascript"></script>
    <script src="{{ base_url() }}/assets/assets/js/alert.js" type="text/javascript"></script>
    <script src="{{ base_url() }}/assets/js/scrollbar.js" type="text/javascript"></script>
    <script>
      $( document ).ready(function() {
         $(".loader").fadeOut(function() {
        $(this).remove(); // Optional if it's going to only be used once.
    });
        });
    </script> 

</body>
</html>
